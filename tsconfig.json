{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "lib": [
      "es2020",
      "dom"
    ],
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}
